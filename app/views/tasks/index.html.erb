<h1>タスク一覧</h1>

<table>
  <tr>
    <th>タスク名</th>
    <th>詳細</th>
    <th>期限日</th>
    <th colspan="4">操作</th>
  </tr>

  <% @tasks.each do |task| %>
    <tr class="<%= 'completed' if task.completed %>">
      <td><%= task.name %></td>
      <td><%= task.details %></td>
      <td><%= task.due_date %></td>
      <td><%= check_box_tag 'completed', '1', task.completed, onchange: "toggleTaskCompletion(#{task.id})" %></td>
      <td><%= link_to '表示', task_path(task) %></td>
      <td><%= link_to '編集', edit_task_path(task) %></td>
      <td><%= button_to '削除', task_path(task), method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to '新しいタスクを追加', new_task_path %>